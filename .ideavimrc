" search
set hlsearch
set incsearch
set smartcase
set wrapscan

" keymap
let mapleader = "\<Space>"

" move window
nnoremap sj <C-w>j
nnoremap sk <C-w>k
nnoremap sl <C-w>l
nnoremap sh <C-w>h

nnoremap <Esc><Esc> :noh<CR>

" split window
nnoremap ss :<C-u>sp<CR>
nnoremap sv :<C-u>vs<CR>

" tab page
nnoremap L gt
nnoremap H gT
nnoremap st :<C-u>tabnew<CR>

" write file
nnoremap <Leader>w :w<CR>
nnoremap <Leader>q :wq<CR>

" surround
set surround

" 行をまたいで移動
set whichwrap=b,s,h,l,<,>,[,],~

" yank to clipboard
set clipboard+=unnamed

" IntelliJ IDEA Actions
nmap <Leader>d <Action>(ActivateDatabaseToolWindow)
nmap <Leader>o <Action>(Switcher)
nmap <Leader>z <Action>(ToggleDistractionFreeMode)
