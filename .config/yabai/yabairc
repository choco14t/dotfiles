# global settings
yabai -m config                                 \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_zoom_persist          on             \
    window_topmost               off            \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_frame_rate  120            \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               on            \
    insert_feedback_color        0xffd75f5f     \
    active_window_border_color   0xff775759     \
    normal_window_border_color   0xff555555     \
    window_border                off            \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  8              \
    bottom_padding               8              \
    left_padding                 8              \
    right_padding                8              \
    window_gap                   8              \
    layout                       bsp

# Space 1
yabai -m rule --add app="WezTerm" space=1
yabai -m rule --add app="Notion" space=^1

# Space 2
yabai -m rule --add app="IntelliJ IDEA" space=^2
yabai -m rule --add app="IntelliJ IDEA" title="Settings" space=^2 manage=off
yabai -m rule --add app="Visual Studio Code" space=^2

# Space 3
yabai -m rule --add app="Firefox" space=^3
yabai -m rule --add app="Google Chrome" space=^3

# Space 4
yabai -m rule --add app="Discord" space=^4
yabai -m rule --add app="Spotify" space=^4

# unmanaged apps
yabai -m rule --add app="^Around$" manage=off
yabai -m rule --add app="^DeepL$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^JetBrains Toolbox$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Shottr$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="Activity Monitor" manage=off
yabai -m rule --add app="Docker Desktop" manage=off

